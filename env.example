# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Resend Email Configuration
# Used for contact form emails to support@rekruna.dk
RESEND_API_KEY=your_resend_api_key_here

# Basic Authentication (for staging/development protection)
# Set BASIC_AUTH_ENABLED=false to disable in production
BASIC_AUTH_ENABLED=true
BASIC_AUTH_USER=your_username_here
BASIC_AUTH_PASSWORD=your_secure_password_here

# Admin Access Control
# Comma-separated list of admin email addresses
# These emails have access to admin endpoints (/api/admin/*)
ADMIN_EMAILS=jan@rekruna.dk,support@rekruna.dk

# Stripe Price IDs (Phase 3: Rekruna 1/5/10 - opret produkter i Stripe Dashboard)
STRIPE_REKRUNA_1_PRICE_ID=price_xxx_rekruna1
STRIPE_REKRUNA_5_PRICE_ID=price_xxx_rekruna5
STRIPE_REKRUNA_10_PRICE_ID=price_xxx_rekruna10

# App Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Internal API Security
# Used for internal service-to-service calls (e.g., batch resume generation)
INTERNAL_API_KEY=your_internal_api_key_here

# Production URLs
NEXT_PUBLIC_APP_URL=https://app.rekruna.dk 

# Feature flags
NEXT_PUBLIC_ENABLE_ADMIN_CLEANUP=0

# Sentry (optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0
NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=0
SENTRY_DEBUG=0
NEXT_PUBLIC_SENTRY_DEBUG=0