# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Basic Authentication (for staging/development protection)
# Set BASIC_AUTH_ENABLED=false to disable in production
BASIC_AUTH_ENABLED=true
BASIC_AUTH_USER=your_username_here
BASIC_AUTH_PASSWORD=your_secure_password_here

# Stripe Price IDs (from Stripe Dashboard -> Products)
STRIPE_PAYG_PRICE_ID=price_xxx_payasyougo
STRIPE_PRO_PRICE_ID=price_xxx_pro
STRIPE_BUSINESS_PRICE_ID=price_xxx_business
STRIPE_BOOST_50_PRICE_ID=price_xxx_boost50
STRIPE_BOOST_100_PRICE_ID=price_xxx_boost100
STRIPE_BOOST_250_PRICE_ID=price_xxx_boost250
STRIPE_BOOST_500_PRICE_ID=price_xxx_boost500

# App Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Internal API Security
# Used for internal service-to-service calls (e.g., batch resume generation)
INTERNAL_API_KEY=your_internal_api_key_here

# Production URLs
NEXT_PUBLIC_APP_URL=https://app.rekruna.dk 

# Feature flags
NEXT_PUBLIC_ENABLE_ADMIN_CLEANUP=0

# Sentry (optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0
NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=0
SENTRY_DEBUG=0
NEXT_PUBLIC_SENTRY_DEBUG=0